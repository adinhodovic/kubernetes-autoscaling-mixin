         "id": 3,
         "options": {
            "graphMode": "area",
            "percentChangeColorMode": "standard",
            "showPercentChange": false
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "expr": "round(\n  sum(\n    kube_poddisruptionbudget_status_desired_healthy{\n      cluster=\"$cluster\",\n      namespace=~\"$namespace\",\n      poddisruptionbudget=~\"$pdb\"\n    }\n  )\n)\n"
            }
         ],
         "title": "Desired Healthy",
         "type": "stat"
      },
